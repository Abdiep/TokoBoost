{
  "apphosting": {
    "backendId": "studio",
    "rootDir": "/",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ],
    "secrets": [
      "SERVICE_ACCOUNT_KEY",
      "DATABASE_URL",
      "GEMINI_API_KEY"
    ],
    "env": {
      "NODE_ENV": "production"
    }
  },
  "database": {
    "rules": "database.rules.json"
  }
}
